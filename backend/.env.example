# Business Image Analysis Platform - Backend Configuration

# Project Settings
PROJECT_NAME="Business Image Analysis Platform"
VERSION="1.0.0"
API_V1_STR="/api"

# CORS Settings (Frontend URLs)
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="uploads"

# Analysis Settings
DEFAULT_DOMINANT_COLORS=5
MAX_TEXT_LENGTH=1000

# OCR Settings
USE_GPU=true
MIN_CONFIDENCE=0.6
MIN_TEXT_LENGTH=2

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Development Settings
DEBUG=true
RELOAD=true

# Security (for production)
SECRET_KEY="your-secret-key-here"
ACCESS_TOKEN_EXPIRE_MINUTES=30